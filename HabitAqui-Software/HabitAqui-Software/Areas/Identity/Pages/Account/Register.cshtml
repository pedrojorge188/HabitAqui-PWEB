@page
@model RegisterModel
@{
    ViewData["Title"] = "Registo";
}

<h1 class="text-white">@ViewData["Title"]</h1>
<br />
<hr />
<div class="row">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="bg-dark p-4 rounded">
            <h2 class="text-white">Criar nova conta como Cliente</h2>
            <hr class="bg-light" />
            <div asp-validation-summary="ModelOnly" class="text-danger p-4"></div>
            <div class="form-floating m-2">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="text-white">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        <div class="form-floating  m-2">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password" class="text-white">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        <div class="form-floating  m-2">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword" class="text-white">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-outline-light">Registar como Cliente</button>
        </form>

</div>
