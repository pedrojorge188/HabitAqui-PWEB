@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}

<h1 class="text-white">@ViewData["Title"]</h1>
<br />
<hr />
<div class="row">
            <form id="account" method="post" class="bg-dark p-4 rounded">
                <h2 class="text-white">Inicie Sessão com a sua conta</h2>
                <hr class="bg-light" />
                <div asp-validation-summary="ModelOnly" class="text-danger p-4"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label text-white">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br />
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label text-white">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div><br />
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label text-white">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                    </div>
                </div>
                <div>
                    <br />
                    <button id="login-submit" type="submit" class="btn btn-lg btn-outline-light">Entrar</button>
                    <br />
                </div>
                <br />
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-white">Esqueci-me da Password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-white">Resgistar como novo cliente</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-white">Reenviar email de confirmação</a>
                    </p>
                </div>
            </form>
</div>
