@model HabitAqui_Software.Models.RentalContract

@{
    ViewData["Title"] = "Create";
}

<h1>Criar contrato de arrendamento</h1>
<br />
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="startDate" class="control-label"></label>
                <input asp-for="startDate" class="form-control" />
                <span asp-validation-for="startDate" class="text-danger"></span>
            </div>           <br />
            <div class="form-group">
                <label asp-for="endDate" class="control-label"></label>
                <input asp-for="endDate" class="form-control" />
                <span asp-validation-for="endDate" class="text-danger"></span>
            </div>           <br />
            <div class="form-group">
                <label asp-for="HabitacaoId" class="control-label"></label>
                <select asp-for="HabitacaoId" class="form-control" asp-items="ViewBag.HabitacaoId"></select>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="userId" class="control-label"></label>
                <select asp-for="userId" class="form-control" asp-items="ViewBag.userId"></select>
            </div>
            <br />
            <div class="form-group">
                <a asp-action="Index" class="btn btn-outline-danger">Voltar</a>
                <input type="submit" value="Create" class="btn btn-primary tb-btn" />
            </div>
        </form>
    </div>
</div>
