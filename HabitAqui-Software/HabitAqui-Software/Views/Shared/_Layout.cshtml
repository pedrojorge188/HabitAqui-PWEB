<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HabitAqui_Software.styles.css" asp-append-version="true" />
</head>
<body>


    <div class="container-fluid">
        <div class="row">

            <div class="preloader">
                <div class="spinner-border  active" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
            {   
                <div class="alert alert-success text-center" role="alert" style="z-index: 999">
                    @ViewBag.SuccessMessage
                </div>

            }
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger text-center" role="alert" style="z-index: 999">
                    @ViewBag.ErrorMessage
                </div>

            }
            <button id="toggleSidebar" class="btn btn-dark d-md-none">
                <i class="fas fa-bars"></i>
            </button>

            <div class="m-4">
                <button class="btn btn-primary btn-dark btn-minus" id="toggleThemeButton"><i class="fa-sharp fa-solid fa-lightbulb"></i></button>
            </div>
            
            <nav class="col-md-2 col-lg-auto d-md-block bg-dark sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item maintext">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fa-solid fa-house" style="color: #ffffff;"></i>&ensp;  HabitAqui
                            </a>
                        </li>
                        <br />
                        <br />
                        <li class="nav-item">
                            <div>
                                <partial name="_LoginPartial" />
                            </div>
                        </li>
                        <br />
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Habitacoes" asp-action="Index">
                                <i class="fa-sharp fa-solid fa-building"></i> Habitações
                            </a>
                        </li>
                        @if (this.User.IsInRole("Client") )
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="RentalContracts" asp-action="History">
                                    <i class="fa-solid fa-building"></i> Histórico arrendamentos
                                </a>
                            </li>
                        }
                        @if (this.User.IsInRole("Employer") || this.User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="RentalContracts" asp-action="Index">
                                    <i class="fa-solid fa-file "></i> Arrendamentos
                                </a>
                            </li>
                        }
                        @if (this.User.IsInRole("Employer") || this.User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="ParqueHabitacoes" asp-action="Index">
                                    <i class="fa-solid fa-building "></i> Parque Habitações
                                </a>
                            </li>
                        }
                        @if (this.User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Managers" asp-action="Index">
                                    <i class="fa-solid fa-person "></i> Gestão Funcionários
                                </a>
                            </li>
                        }
                        @if (this.User.IsInRole("Admin"))
                         {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index">
                                <i class="fa-solid fa-file"></i> Categorias
                            </a>
                        </li>
                         }
                        @if (this.User.IsInRole("Admin")){
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Locador" asp-action="Index">
                                <i class="fa-solid fa-person"></i> Locadores
                            </a>
                        </li>
                        }
                        @if (this.User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">
                                    <i class="fa-solid fa-person"></i> Utilizadores
                                </a>
                            </li>
                        }
                        <li class="nav-item bottom-settings">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Credits">
                                <i class="fa-solid fa-gear"></i> Créditos
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <main class="col-md-10 ms-sm-auto col-lg-10 px-md-4">
                <div class="container">
                    @RenderBody()
                </div>

            </main>


        </div>
    </div>
    <!-- Restante do corpo e scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>

    @if (ViewBag.ContractsData != null && ViewBag.ContractsData.Count > 0)
    {
        <script>
            var labels = [];
            var data = [];

            var contractsData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.ContractsData));
            contractsData.forEach(function (item) {
                labels.push(item.userName);
                data.push(item.Count);
            });

            var ctx = document.getElementById('myChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'arrendamentos confirmados por cliente',
                        color: 'white',
                        data: data,
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.5)',
                            'rgba(54, 162, 235, 0.5)',
                            'rgba(255, 206, 86, 0.5)',
                            'rgba(75, 192, 192, 0.5)',
                            'rgba(153, 102, 255, 0.5)',
                            'rgba(255, 159, 64, 0.5)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            labels: {
                                color: 'white' 
                            },
                            position: 'right',
                        },
                        title: {
                            display: true,
                            text: 'Arrendamentos confirmados por cliente',
                            color: 'white',
                            font: {
                                size: 18 // Define o tamanho da fonte do título
                            }
                        }
                    }
                }
            });
        </script>
    }

</body>
@RenderSection("Scripts", required: false)
</html>