@model IEnumerable<HabitAqui_Software.Models.RentalContract>
@{
    ViewData["Title"] = "Habitações";
}

<h1>Histórico de Arrendamentos</h1>
<hr />
<br />
<div class="text-center">


    <div class="table-responsive">
        <table class="table table-striped ">
            <thead>
                <tr>
                    <th>Habitacao</th>
                    <th>-</th>
                    <th>-</th>
                    <th>-</th>
                    <th>-</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" class="btn btn-sm btn-primary tb-btn" asp-route-id="@item.habitacao.Id"> <i class="fa-sharp fa-solid fa-eye" style="color: #ffffff; margin-right: 5px"></i>@item.habitacao.location</a>
                            </td>
                            <td>
                                
                            </td>
                            <td>
                               
                            </td>
                            <td>
                                
                            </td>
                            <td>
                                 <i class="fa-solid fa-star"></i>
                            </td>
                            <td style="padding:10px">
                                <a asp-action="#" class="btn btn-sm btn-primary tb-btn" asp-route-id="#"> <i class="fa-sharp fa-solid fa-plus" style="color: #ffffff; margin-right: 5px"></i>Nota</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9">Nenhum item encontrado.</td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    </div>
</div>
