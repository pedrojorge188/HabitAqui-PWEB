@model HabitAqui_Software.Models.Category

@{
    ViewData["Title"] = "Nova categoria";
}

<div class="container">
    <h1>Nova categoria</h1>

    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
